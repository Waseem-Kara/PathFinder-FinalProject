@using System.Activities.Statements
@using PathFinder.Models
@model Account

@{
    Layout = null;
}

@using (Html.BeginForm("RegisterUser", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="row main">
            <div class="panel-heading">
                <div class="panel-title text-center">
                    <h1 class="title">Register</h1>
                </div>
            </div>
            <div class="main-login main-center">
                <form class="form-horizontal" id="loginForm">

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">@Html.LabelFor(m => m.Firstname)</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Firstname, new { type = "text", placeholder = "First name", @class = "input-group-lg form-control" })
                                @Html.ValidationMessageFor(m => m.Firstname)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">@Html.LabelFor(m => m.Lastname)</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Lastname, new { type = "text", placeholder = "Last name", @class = "input-group-lg form-control" })
                                @Html.ValidationMessageFor(m => m.Lastname)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">@Html.LabelFor(m => m.Email)</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { type = "email", placeholder = "123@abc.com", @class = "input-group-lg form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="cols-sm-2 control-label">@Html.LabelFor(m => m.Password)</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                @Html.PasswordFor(m => m.Password, new {name="password", id = "password", type = "password", placeholder = "Password", @class = "input-group-lg form-control"})
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="cols-sm-2 control-label">@Html.LabelFor(m => m.ComparePassword)</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                                @Html.PasswordFor(m => m.ComparePassword, new { type = "password", placeholder = "Confirm password", @class = "input-group-lg form-control" })
                                @Html.ValidationMessageFor(m => m.ComparePassword)
                            </div>
                        </div>
                    </div>
                    
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" name="submit" id="submit-button" value="Submit" class="btn btn-primary">Submit</button>
    </div>
}


